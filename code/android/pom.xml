    <modelVersion>4.0.0</modelVersion>

    <groupId>org.springsource.examples.crm</groupId>
    <version>1.0.0</version>
    <artifactId>android</artifactId>
    <packaging>apk</packaging>
    <properties>
        <android.sdk.path>${user.home}/bin/android-sdk-macosx</android.sdk.path>
        <android.platform>17</android.platform>
        <android.emulator>crm</android.emulator>
        <maven.android.plugin.version>2.8.4</maven.android.plugin.version>
        <maven.compiler.plugin.version>2.3.2</maven.compiler.plugin.version>
        <android.version>4.1.1.4</android.version>
        <spring.android.version>1.0.1.RELEASE</spring.android.version>
        <!--<spring-social-version>1.0.0.M2</spring-social-version>-->
        <simple.version>2.4.1</simple.version>
        <android.rome.version>1.0.0-r2</android.rome.version>
    </properties>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <version>3.5.3</version>
                <configuration>

                    <sdk>
                        <platform>17</platform>
                    </sdk>
                    <dex>
                        <jvmArguments>
                            <jvmArgument>-Xms256m</jvmArgument>
                            <jvmArgument>-Xmx512m</jvmArgument>
                        </jvmArguments>
                    </dex>

                    <undeployBeforeDeploy>true</undeployBeforeDeploy>
                </configuration>
                <extensions>true</extensions>
            </plugin>


        </plugins>
    </build>


